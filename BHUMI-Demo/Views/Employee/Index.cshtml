@model BHUMI_Demo.Models.Employee

<style>
    /* Remove space from the top */
    body {
        margin: 0;
        padding: 0;
    }
    button, .btn {
        padding: 10px 20px;
        margin-right: 10px;
        font-size: 14px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
    }
        button.add-btn {
            background-color: #4CAF50;
            color: white;
        }

        button.report-btn {
            background-color: #2196F3;
            color: white;
        }
        a:hover {
            text-decoration: underline;
        }
</style>

<div class="row">
    <div class="col-md-12">
        <h2>Employee List</h2>
        <a href="@Url.Action("Create", "Employee")" class="btn btn-primary" style="margin-bottom: 15px;">Add</a>
        <a href="@Url.Action("EmployeeReport", "Employee")" class="btn btn-success" style="margin-bottom: 15px;">Report</a>
    </div>
</div>

    <div class="form">
        <div class="form-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="card">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="text" id="searchBox" class="form-control" placeholder="Search by Employee Code or Name" value="@Request.QueryString["search"]" />
                                    </div>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <div id="divMailConfigList" class="card-body pt-0 pb-1">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered" id="employeeTable">
                                            <tr>
                                                <th>Employee Code</th>
                                                <th>Employee Name</th>
                                                <th>DOB</th>
                                                <th>Age/Gender</th>
                                                <th>Contact No</th>
                                                <th>Edit</th>
                                                <th>Delete</th>
                                            </tr>
                                            @foreach (var emp in ViewBag.Items)
                                            {
                                <tr>
                                    <td>@emp.EmployeeCode</td>
                                    <td>@emp.EmployeeName</td>
                                    <td>@emp.DOB.ToShortDateString()</td>
                                    <td>@emp.Age / @emp.Gender</td>
                                    <td>@emp.ContactNo</td>
                                    <td>@Html.ActionLink("Edit", "Create", new { id = emp.Id })</td>
                                    <td>@Html.ActionLink("Delete", "Delete", new { id = emp.Id })</td>
                                </tr>}
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
$(document).ready(function() {
    $('#searchBox').on('keyup', function() {
        var searchTerm = $(this).val();

        $.ajax({
            url: '@Url.Action("Index", "Employee")',
            type: 'GET',
            data: { search: searchTerm },
            success: function(data) {
                $('#employeeTable tbody').html($(data).find('#employeeTable tbody').html());
            }
        });
    });
});
</script>