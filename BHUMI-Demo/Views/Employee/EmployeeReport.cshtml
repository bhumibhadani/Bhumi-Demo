@model BHUMI_Demo.Models.DateRangeViewModel

@{
    ViewBag.Title = "Employee Report Criteria";
}

<h2 class="text-center">Employee Report Criteria</h2>


@using (Html.BeginForm("Report", "Employee", FormMethod.Post))
{
    <div class="form">
        <div class="form-body">
            <div class="form-group">
                <div class="card" id="divAutoLSPTemplate">
                    <div class="card-header" style="padding-bottom:unset!important;">
                        <div class="row">
                            <div class="col-md-10">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.FromDate, "From Date", new { @class = "control-label" })
                                        @Html.EditorFor(m => m.FromDate, new { @class = "form-control", type = "date", id = "FromDate" })
                                        @Html.ValidationMessageFor(m => m.FromDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.ToDate, "To Date", new { @class = "control-label" })
                                        @Html.EditorFor(m => m.ToDate, new { @class = "form-control", type = "date", id = "ToDate" })
                                        @Html.ValidationMessageFor(m => m.ToDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-4">
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Generate Report</button>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#FromDate, #ToDate").datepicker({
                format: 'mm-dd-yyyy',
                autoclose: true,
                todayHighlight: true,
                startDate: '01-01-1900',
                endDate: new Date()
            });
        });
    </script>
}
