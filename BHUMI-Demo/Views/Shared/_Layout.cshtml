                </ul>
            </div>
        </div>
    </nav>


    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-header">
                <div class="row">
                    @RenderSection("PageHeadingAndNavigationBar", required: false)
                </div>
            </div>
            <div class="content-body">
                @RenderBody()
            </div>

        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")



    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="https://unpkg.com/axios/dist/axios.min.js"></script>
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        var jData = {};
        function updateShowGuidence() {

            $.ajax({
                type: "POST",
                url: "/UserMaster/updateShowGuidence",
                async: false,
                success: function (response) {

                    var response = JSON.parse(response);
                },
                error: function (xhr, status, p3, p4) {

                    var err = "Error " + " " + status + " " + p3 + " " + p4;
                    if (xhr.responseText && xhr.responseText[0] == "{")
                        err = JSON.parse(xhr.responseText).Message;
                }
            });
        }
    </script>
    <script>
        $(document).ready(function () {
            var aboutAs = localStorage.getItem("AboutUs");
            if (aboutAs == undefined || aboutAs == null) {
                $.ajax({
                    type: "GET",
                    url: '/Shared/AboutUs',
                    async: false,
                    success: function (result) {
                        localStorage.setItem("AboutUs", result);
                        $("#divAboutUs").html("");
                        $("#divAboutUs").html(result);

                    }
                });
            }

            $("a#btnSearch").addClass('width-0');
            $("a#btnSearch").hide();
            $("#advancedSearch").hide();


            $("#inputDashboardSearch").keydown(function (e) {

                var code = (e.keyCode ? e.keyCode : e.which);

                if (code == 13)// Enter key hit
                {
                    //alert('13');
                    SearchHistory();
                }
                else if (code == 9)// Tab key hit
                {
                    //alert('9');
                    SearchHistory();
                    e.preventDefault();
                }
                else {
                    //alert('0');

                }
            });
        });

        $(".nav-link-search").on('click', function () {
            setTimeout(function () {
                //your code to be executed after 1 second
                if ($(".search-input").hasClass("open")) {
                    $("a#btnSearch").show(200);
                    $("#advancedSearch").show(200);
                }
                else {
                    $("a#btnSearch").hide(200);
                    $("#advancedSearch").hide(200);
                }
            }, 500);
        });

        $('#MyStatistics').on('show.bs.modal', function (event) {
            for (var i = 1; i < 5; i++) {
                onChangeWidgetDesc(i);
            }
        });
    </script>
</body>
</html>